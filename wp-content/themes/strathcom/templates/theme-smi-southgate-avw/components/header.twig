<header class="site-header {% if block( 'top_bar' )|trim %}header-has-top-bar{% endif %}">
	<div class="site-branding">
		<a href="{{ site.url|e('html_attr') }}" class="site-logo {% if not logo_src -%} heading-only {%- endif %}" rel="home">
			{% if logo_src %}
				<img src="{{ logo_src | apply_filters('photon_url') | e('html_attr') }}" alt="{{ site.title|e('html_attr') }}" class="logo">
			{% endif %}
			<div class="text-logo">{{ site.name }}</div>
		</a>
		{% if block( 'top_bar' )|trim %}
			<div class="site-top-bar">
				{% block top_bar %}
					{% include 'components/top-bar.twig' %}
				{% endblock %}
			</div>
		{% endif %}
	</div>
	{% include 'components/nav-primary.twig' %}
</header>