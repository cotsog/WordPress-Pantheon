{% extends "widgets/base-widget.twig" %}

{% set title_type = title_type | default('h2') %}

{% block content %}
	<section class="fluid-boxes content-{% if content_position == 'right' %}right{% else %}left{% endif %} {{ custom_class}}">
		<div class="container-optional">
			<div class="fluid-left-col" {% if content_position | default('left') == 'right' %}style="{{ macros.background_image( background_image_src ) }}{% else %}style="{{ macros.background_hex_value( background_hex_value ) }}{% endif %}">
				<div class="inner">
				{% if content_position | default('left') == 'left' %}
					{% if title %}
						<{{ title_type }}>{{ title | e }}</{{ title_type }}>
					{% endif %}
					{% if description -%}
						{{ description | urldecode | apply_filters('the_content') }}
					{%- endif %}
					{% for btn in buttons %}
						{{ macros.button( btn, btn.class ) }}
					{% endfor %}
					{{ macros.figure_block( content_image_src, title ) }}
				{% endif %}
				</div>
			</div>
			<div class="fluid-right-col" {% if content_position | default('left') == 'left' %}style="{{ macros.background_image( background_image_src ) }}{% else %}style="{{ macros.background_hex_value( background_hex_value ) }}{% endif %}">
				<div class="inner">
				{% if content_position | default('left') == 'right' %}
					{% if title %}
						<{{ title_type }}>{{ title | e }}</{{ title_type }}>
					{% endif %}
					{% if description -%}
						{{ description | urldecode | apply_filters('the_content') }}
					{%- endif %}
					{% if buttons -%}
						{%- for btn in buttons -%}
							{{ macros.button( btn, btn.class ) }}
						{% endfor -%}
					{%- endif %}
					{{ macros.figure_block( content_image_src, title ) }}
				{% endif %}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
