<footer class="site-footer">
	<div class="footer-container">
		<div class="row">
			{% if footer_widgets | trim %}
				<div class="footer-widgets">
					{{ footer_widgets|replace( text_replace ) }}
				</div>
			{% endif %}

			<div class="stay-informed">
				<hr />
				{% if 'fr' in site.language %}
					<h3>Abonnez-vous à l'infolettre</h3>
					<a href="/fr/newsletter-2/" class="btn btn-primary btn-sm">Abonnez-vous</a>
				{% else %}
					<h3>Stay Informed</h3>
					<a href="/newsletter/" class="btn btn-primary btn-sm">Newsletter Sign Up</a>
				{% endif %}
			</div>

			<div class="footer-social">
				{% if 'fr' in site.language %}
					<h3>Suivez-nous</h3>
				{% else %}
					<h3>Follow Us</h3>
				{% endif %}

				{{ footer_social }}
			</div>

			{%- include 'widgets/dealer-info.twig' with dealer_location -%}
		</div>
		<div class="row">
			<div class="strathcom-footer">

				{% if 'fr' in site.language %}
					Site web conçu, réalisé et propulsé par
				{% else %}
					Website designed & powered by
				{% endif %}

				<a href="http://www.strathcom.com/" target="_blank">Strathcom Media</a>

			</div>
		</div>
	</div>
</footer>
