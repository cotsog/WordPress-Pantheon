{% block pagination %}
	{% if pagination.pages|length > 0 %}
		{% set li_class = 'page-item' %}
		{% set link_class = 'page-link' %}
		<nav class="pagination-wrapper">
			<ul class="pagination">
				{% if pagination.prev %}
					<li class="{{ li_class }}">
						<a href="{{ pagination.prev.link }}" aria-label="Previous" class="{{ link_class }} {{ pagination.prev.link|length ? '' : 'hidden' }}">
							<span aria-hidden="true">&laquo;</span>
							<span class="sr-only">Previous</span>
						</a>
					</li>
				{% endif %}
				{% for page in pagination.pages %}
					{% if page.link %}
						<li class="{{ li_class }}">
							<a href="{{ page.link }}" class="{{ link_class }} {{ page.class }}">{{ page.title }}</a>
						</li>
					{% else %}
						<li class="active {{ li_class }}">
							<span class="{{ link_class }} {{ page.class }}">{{ page.title }} <span class="sr-only">(current)</span></span>
						</li>
					{% endif %}
				{% endfor %}
				{% if pagination.next %}
					<li class="{{ li_class }}">
						<a href="{{ pagination.next.link }}" aria-label="Next" class="{{ link_class }} {{ pagination.next.link|length ? '' : 'hidden' }}">
							<span aria-hidden="true">&raquo;</span>
							<span class="sr-only">Next</span>
						</a>
					</li>
				{% endif %}
			</ul>
		</nav>
	{% endif %}
{% endblock %}